<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Fleet Inspection Views -->
    
    <!-- Tree View -->
    <record id="view_fleet_inspection_tree" model="ir.ui.view">
        <field name="name">fleet.inspection.tree</field>
        <field name="model">fleet.inspection</field>
        <field name="arch" type="xml">
            <tree string="Fleet Inspections" decoration-info="state=='draft'" decoration-success="state=='completed'">
                <field name="name"/>
                <field name="vehicle_id"/>
                <field name="driver_id"/>
                <field name="inspection_date"/>
                <field name="state" decoration-info="state=='draft'" decoration-success="state=='completed'"/>
                <field name="overall_status" optional="show"/>
                <field name="completion_percentage" widget="progressbar" optional="show"/>
                <field name="items_bad" optional="hide"/>
                <field name="completion_time" optional="hide"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_fleet_inspection_form" model="ir.ui.view">
        <field name="name">fleet.inspection.form</field>
        <field name="model">fleet.inspection</field>
        <field name="arch" type="xml">
            <form string="Fleet Inspection">
                <header>
                    <button name="action_start_inspection" string="Start Inspection" 
                            type="object" class="oe_highlight" 
                            attrs="{'invisible': ['|', ('state', '!=', 'draft'), ('inspection_line_ids', '!=', [])]}"/>
                    <button name="action_resume_inspection" string="Resume Inspection" 
                            type="object" class="oe_highlight" 
                            attrs="{'invisible': ['|', ('state', '!=', 'draft'), ('inspection_line_ids', '=', [])]}"/>
                    <button name="action_complete_inspection" string="Complete Inspection" 
                            type="object" class="oe_highlight" 
                            attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,completed"/>
                </header>
                
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="vehicle_id" options="{'no_create_edit': True}"/>
                            <field name="driver_id" options="{'no_create_edit': True}"/>
                            <field name="inspection_date"/>
                            <field name="template_id" options="{'no_create_edit': True}" attrs="{'readonly': [('inspection_line_ids', '!=', [])]}"/>
                        </group>
                        <group>
                            <field name="odometer"/>
                            <field name="overall_status" attrs="{'invisible': [('state', '=', 'draft')]}"/>
                            <field name="completion_percentage" widget="progressbar" attrs="{'invisible': [('state', '=', 'draft')]}"/>
                            <field name="completion_time" attrs="{'invisible': [('state', '=', 'draft')]}"/>
                        </group>
                    </group>

                    <!-- Summary Statistics -->
                    <group string="Summary" attrs="{'invisible': [('state', '=', 'draft'), ('inspection_line_ids', '=', [])]}">
                        <group>
                            <field name="total_items"/>
                            <field name="items_good"/>
                        </group>
                        <group>
                            <field name="items_regular"/>
                            <field name="items_bad"/>
                        </group>
                    </group>

                    <!-- Driver Information -->
                    <group string="Driver Information" groups="fleet_inspection_mobile.group_fleet_inspection_manager">
                        <group>
                            <field name="license_number"/>
                            <field name="license_type"/>
                            <field name="license_expiry"/>
                        </group>
                        <group>
                            <field name="defensive_course"/>
                            <field name="course_duration" attrs="{'invisible': [('defensive_course', '=', False)]}"/>
                        </group>
                    </group>

                    <!-- Inspection Items -->
                    <notebook>
                        <page string="Inspection Items">
                            <field name="inspection_line_ids" nolabel="1">
                                <tree editable="bottom" decoration-danger="status=='mal'" decoration-warning="status=='regular'" decoration-success="status=='bien'">
                                    <field name="section" readonly="1"/>
                                    <field name="sequence" invisible="1"/>
                                    <field name="name" readonly="1"/>
                                    <field name="status"/>
                                    <field name="observations"/>
                                    <field name="photo_count" string="Photos"/>
                                    <field name="inspected_at" readonly="1"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="section" readonly="1"/>
                                        <field name="name" readonly="1"/>
                                        <field name="status"/>
                                        <field name="observations"/>
                                        <field name="inspected_at" readonly="1"/>
                                    </group>
                                    <group string="Photos">
                                        <field name="photo_ids" nolabel="1">
                                            <tree>
                                                <field name="name"/>
                                                <field name="taken_at"/>
                                                <field name="image_size"/>
                                            </tree>
                                        </field>
                                    </group>
                                </form>
                            </field>
                        </page>
                        
                        <page string="General Observations">
                            <field name="observations" nolabel="1" placeholder="Add any general observations about the vehicle..."/>
                        </page>

                        <page string="Signatures" attrs="{'invisible': [('state', '=', 'draft')]}">
                            <group>
                                <field name="driver_signature" widget="image"/>
                                <field name="supervisor_signature" widget="image"/>
                            </group>
                        </page>

                        <page string="Metadata" groups="base.group_no_one">
                            <group>
                                <group>
                                    <field name="start_time"/>
                                    <field name="end_time"/>
                                    <field name="device_info"/>
                                </group>
                                <group>
                                    <field name="create_date"/>
                                    <field name="write_date"/>
                                    <field name="create_uid"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_fleet_inspection_search" model="ir.ui.view">
        <field name="name">fleet.inspection.search</field>
        <field name="model">fleet.inspection</field>
        <field name="arch" type="xml">
            <search string="Fleet Inspections">
                <field name="name"/>
                <field name="vehicle_id"/>
                <field name="driver_id"/>
                <separator/>
                <filter name="my_inspections" string="My Inspections" 
                        domain="[('create_uid', '=', uid)]"/>
                <filter name="draft" string="In Progress" 
                        domain="[('state', '=', 'draft')]"/>
                <filter name="completed" string="Completed" 
                        domain="[('state', '=', 'completed')]"/>
                <separator/>
                <filter name="today" string="Today" 
                        domain="[('inspection_date', '>=', context_today().strftime('%Y-%m-%d 00:00:00')), 
                                ('inspection_date', '&lt;', (context_today() + datetime.timedelta(days=1)).strftime('%Y-%m-%d 00:00:00'))]"/>
                <filter name="this_week" string="This Week" 
                        domain="[('inspection_date', '>=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d 00:00:00'))]"/>
                <separator/>
                <filter name="needs_attention" string="Needs Attention" 
                        domain="[('overall_status', 'in', ['attention', 'maintenance'])]"/>
                <filter name="bad_items" string="Has Bad Items" 
                        domain="[('items_bad', '>', 0)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter name="group_vehicle" string="Vehicle" domain="[]" context="{'group_by': 'vehicle_id'}"/>
                    <filter name="group_driver" string="Driver" domain="[]" context="{'group_by': 'driver_id'}"/>
                    <filter name="group_status" string="Status" domain="[]" context="{'group_by': 'overall_status'}"/>
                    <filter name="group_date" string="Date" domain="[]" context="{'group_by': 'inspection_date:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_fleet_inspection_kanban" model="ir.ui.view">
        <field name="name">fleet.inspection.kanban</field>
        <field name="model">fleet.inspection</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="vehicle_id"/>
                <field name="driver_id"/>
                <field name="inspection_date"/>
                <field name="state"/>
                <field name="overall_status"/>
                <field name="completion_percentage"/>
                <field name="items_bad"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <strong>
                                            <t t-if="record.vehicle_id">
                                                <t t-esc="record.vehicle_id.value"/>
                                            </t>
                                            <t t-else="">Sin vehículo</t>
                                        </strong>
                                    </div>
                                    <div class="o_secondary">
                                        <t t-if="record.name">
                                            <t t-esc="record.name.value"/>
                                        </t>
                                        <t t-else="">Nueva Inspección</t>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_card_content">
                                <div class="row">
                                    <div class="col-6">
                                        <strong>Driver:</strong><br/>
                                        <t t-if="record.driver_id">
                                            <t t-esc="record.driver_id.value"/>
                                        </t>
                                        <t t-else="">-</t>
                                    </div>
                                    <div class="col-6">
                                        <strong>Date:</strong><br/>
                                        <t t-if="record.inspection_date">
                                            <t t-esc="record.inspection_date.value"/>
                                        </t>
                                        <t t-else="">-</t>
                                    </div>
                                </div>
                                <div t-if="record.state and record.state.raw_value == 'completed'" class="row mt-2">
                                    <div class="col-12">
                                        <t t-if="record.overall_status">
                                            <div t-attf-class="badge badge-#{record.overall_status.raw_value == 'good' ? 'success' : record.overall_status.raw_value == 'attention' ? 'warning' : 'danger'}">
                                                <t t-esc="record.overall_status.value"/>
                                            </div>
                                        </t>
                                        <t t-if="record.items_bad and record.items_bad.raw_value > 0">
                                            <span class="badge badge-danger ml-1">
                                                <t t-esc="record.items_bad.value"/> Bad Items
                                            </span>
                                        </t>
                                    </div>
                                </div>
                                <div t-if="record.state and record.state.raw_value == 'draft'" class="row mt-2">
                                    <div class="col-12">
                                        <t t-if="record.completion_percentage">
                                            <div class="progress">
                                                <div class="progress-bar" t-attf-style="width: #{record.completion_percentage.value || 0}%"/>
                                            </div>
                                            <small><t t-esc="record.completion_percentage.value || 0"/>% Complete</small>
                                        </t>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_card_manage_pane">
                                <div class="row">
                                    <div class="col-6 o_kanban_primary_left">
                                        <t t-if="record.state">
                                            <button t-if="record.state.raw_value == 'draft'" class="btn btn-primary btn-sm" name="action_resume_inspection" type="object">
                                                Resume
                                            </button>
                                            <button t-if="record.state.raw_value == 'completed'" class="btn btn-secondary btn-sm" name="action_view_details" type="object">
                                                View
                                            </button>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_fleet_inspection" model="ir.actions.act_window">
        <field name="name">Fleet Inspections</field>
        <field name="res_model">fleet.inspection</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_my_inspections': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No inspections found. Let's create one!
            </p>
            <p>
                Fleet inspections help you track the condition of your vehicles
                and ensure they are safe to operate.
            </p>
        </field>
    </record>

    <record id="action_fleet_inspection_new" model="ir.actions.act_window">
        <field name="name">New Inspection</field>
        <field name="res_model">fleet.inspection</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
        <field name="context">{'form_view_initial_mode': 'edit'}</field>
    </record>

    <!-- Inspection Template Action -->
    <record id="action_fleet_inspection_template" model="ir.actions.act_window">
        <field name="name">Inspection Templates</field>
        <field name="res_model">fleet.inspection.template</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create an Inspection Template
            </p>
            <p>
                Templates define the items to check during vehicle inspections.
            </p>
        </field>
    </record>

</odoo>